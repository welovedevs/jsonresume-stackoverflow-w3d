{{#if resume.basics}}
  <header id="header" class="clear">
    {{#if resume.basics.picture}}
      <img class="image" src="{{resume.basics.picture}}" alt="{{resume.basics.name}}"/>
      <div class="middle">
        <h1 class="name">{{resume.basics.name}}</h1>
        <h2 class="label">{{resume.basics.label}}</h2>
      </div>
    {{else}}
      <div>
        <h1 class="name">{{resume.basics.name}}</h1>
        <h2 class="label">{{resume.basics.label}}</h2>
      </div>
    {{/if}}

    {{#location}}
      <span class="location">
			{{#if address}}
        <span class="address">{{address}},</span>
      {{/if}}
        {{#if postalCode}}
          <span class="postalCode">{{postalCode}},</span>
        {{/if}}
        {{#if city}}
          <span class="city">{{city}},</span>
        {{/if}}
        {{#if region}}
          <span class="region">{{region}}</span>
        {{/if}}
        {{#if countryCode}}
          <span class="countryCode">{{countryCode}}</span>
        {{/if}}
		</span>
    {{/location}}

    {{#birthDate birth}}
    {{/birthDate}}

    {{#if resume.specific.work.contractTypes.length}}
      {{#ifCond resume.specific.work.contractTypes.length '>' 1}}
        <span id="contract">Contrats recherchés :</span>
      {{else}}
        <span id="contract">Contrat recherché :</span>
      {{/ifCond}}

      {{#each resume.specific.work.contractTypes}}
        {{#ifCond ../resume.specific.work.contractTypes.length '-==' @index }}
          <span>{{getW3DWord ..}}</span>
        {{else}}
          <span>{{getW3DWord ..}},</span>
        {{/ifCond}}
      {{/each}}
    {{/if}}

    <div id="contact">
      {{#if website}}
        <div class="website">
          <span class="fas fa-external-link-alt"></span>
          <a class="hide-href-print" target="_blank" target="_blank" href="{{website}}">{{website}}</a>
        </div>
      {{/if}}
      {{#if email}}
        <div class="email">
          <span class="far fa-envelope"></span>
          <a class="hide-href-print" href="mailto:{{email}}">{{email}}</a>
        </div>
      {{/if}}
      {{#if phone}}
        <div class="phone">
          <span class="fas fa-mobile-alt"></span>
          <a class="hide-href-print" href="tel:{{phone}}">{{phone}}</a>
        </div>
      {{/if}}
    </div>

    {{#if resume.specific.basics.visaSponsorship}}
      <span class="area">| J'ai besoin d'un visa</span>
    {{/if}}


    <div id="profiles">
      {{#if resume.specific.sound.embedUrl}}
        <div class="username">
          <span class="fab fa-spotify"></span>
          {{#if resume.specific.sound.embedUrl}}
            <span class="url">
						<a target="_blank" href="{{resume.specific.sound.embedUrl}}">Ma playlist Spotify</a>
					</span>
          {{/if}}
        </div>
      {{/if}}
      {{#if profiles.length}}
        {{#each profiles}}
          <div class="item">
            {{#if network}}
              <div class="username">
                <span class="fab fa-{{spaceToDash network}} {{spaceToDash network}} social"></span>
                {{#if url}}
                  <span class="url">
						<a target="_blank" href="{{url}}">{{username}}</a>
					</span>
                {{else}}
                  <span>{{username}}</span>
                {{/if}}
              </div>
            {{/if}}
          </div>
        {{/each}}
      {{/if}}
    </div>

    {{#if resume.specific.basics.personalDescription}}
      <div class="description mt-1">{{paragraphSplit resume.specific.basics.personalDescription}}</div>
    {{/if}}
  </header>

  {{#if resume.basics.summary}}
    <section class="section">
      <section class="main-summary">
        <div>{{paragraphSplit resume.basics.summary}}</div>
      </section>
    </section>
  {{/if}}

  {{! Do not remove paddingBottom (used on web app) }}
  <div class="paddingBottom"/>
{{/if}}


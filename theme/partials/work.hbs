{{#if resume.work.length}}
  <section class="section">
    <header>
      <h2 class='section-title'>EXPÉRIENCES PROFESSIONNELLES <span class="item-count">({{resume.work.length}})</span></h2>
    </header>
    {{#resume.specific.work}}
      <section id="work-years">
        {{#if codeExperienceYears}}
          <div id="code-expericence">{{codeExperienceYears}} année(s) d'expérience professionnelle en tant que
            développeur.
          </div>
        {{/if}}
        {{#if otherExperienceYears}}
          <div id="other-experience">{{otherExperienceYears}} année(s) d'expérience professionnelle en dehors du métier
            de développeur.
          </div>
        {{/if}}
      </section>
    {{/resume.specific.work}}
    <section id="work">
      {{#if resume.specific.isFree}}
        <div id="restricted">
          Cette section n'est pas disponible sans abonnement.
          {{#if resume.specific.profileLink}}
            <a target="_blank" href="{{resume.specific.profileLink}}">Rendez-vous sur le profil du candidat pour
              découvrir ses expériences.</a>{{/if}}
        </div>
      {{else}}
        {{#each resume.work}}
          <section class="work-item">
            {{#if position}}

              {{#if summary}}
                {{#if @first}}
                  <input id="work-item-{{@index}}" type="checkbox" class="toggle-item" checked="checked"/>
                {{else}}
                  <input id="work-item-{{@index}}" type="checkbox" class="toggle-item"/>
                {{/if}}
                <label for="work-item-{{@index}}"></label>
              {{/if}}

              <header class="clear">
                {{#if position}}
                  <div class="position">{{position}}</div>
                {{/if}}
              {{#if name}}
                <div class="company">{{name}}</div>
              {{/if}}
                <div class="date">
                  {{#if startDate}}
                    <span class="startDate">{{MY startDate}} - </span>
                    {{#if endDate}}
                      <span class="endDate">{{MY endDate}}</span>
                    {{else}}
                      <span class="endDate">Aujourd'hui</span>
                    {{/if}}
                  {{/if}}
                </div>
              </header>
            {{/if}}

            {{#if location}}
              <span class="location">
              <span class="fas fa-map-marker-alt"></span>
              <span class="city">{{location}}</span>
            </span>
            {{/if}}

            {{#if website}}
              <span class="website">
    		<a target="_blank" href="{{website}}">{{website}}</a>
    	    </span> {{/if}} {{#if keywords.length}}
            <ul class="keywords">
              {{#each keywords}}
                <li>{{.}}</li>
              {{/each}}
            </ul>
          {{/if}}
            <div class="item" id="work-item">
              {{#if summary}}
                <div class="summary">{{paragraphSplit summary}}</div>
              {{/if}}
              {{#if highlights.length}}
                <ul class="highlights">
                  {{#each highlights}}
                    <li>{{paragraphSplit .}}</li>
                  {{/each}}
                </ul>
              {{/if}}
            </div>
          </section>
        {{/each}}
      {{/if}}
    </section>
  </section>
{{/if}}

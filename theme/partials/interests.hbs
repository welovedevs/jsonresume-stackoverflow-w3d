{{#if resume.interests.length}}
<section class="section">
  <header>
    <h2 class='section-title' class='section-title'>CENTRES D'INTÉRÊT</h2>
  </header>
  <section id="interests">
    {{#each resume.interests}}
    <div class="item">
      {{#if name}}
        <h6 class="name">
          {{name}}{{#unless @last}},{{/unless}}
        </h6>
      {{/if}}
      {{#if keywords.length}}
      <ul class="keywords">
        {{#each keywords}}
        <li>{{.}}</li>
        {{/each}}
      </ul>
      {{/if}}
      {{#if summary}}
        <div class="summary">{{paragraphSplit summary}}</div>
      {{/if}}
    </div>
    {{/each}}
  </section>
</section>
{{/if}}
